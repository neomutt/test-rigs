#!/bin/bash 

FILE="mm.log"

if [ $# -eq 0 ]; then
	exit 1
fi

if [ $1 = "-m" ]; then
	shift
	shift
	echo "Relays: ${@}" >> "$FILE"
	cat >> "$FILE"
	exit 0;
elif [ $1 = "-T" ]; then
	echo "Apple      apple@flatcap.org      1 1 CNp"
	echo "Banana     banana@flatcap.org     1 1 CM"
