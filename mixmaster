	echo "Guava      guava@flatcap.org      1 1 CNm"
	echo "Hawthorn   hawthorn@flatcap.org   1 1 C"
	echo "Ilama      ilama@flatcap.org      1 1 M"
	echo "Jackfruit  jackfruit@flatcap.org  1 1 CNm"
	echo "Kumquat    kumquat@flatcap.org    1 1 CMNm"
	echo "Lemon      lemon@flatcap.org      1 1 CNm"
	echo "Mango      mango@flatcap.org      1 1 CM"
	echo "Nectarine  nectarine@flatcap.org  1 1 C"
	echo "Olive      olive@flatcap.org      1 1 CNm"
	echo "Papaya     papaya@flatcap.org     1 1 C"
	echo "Quince     quince@flatcap.org     1 1 CNp"
	echo "Raspberry  raspberry@flatcap.org  1 1 CNm"
	echo "Strawberry strawberry@flatcap.org 1 1 CMNm"
